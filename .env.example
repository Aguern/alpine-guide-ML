# ============================================
# TourismIQ Platform - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=info

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
CACHE_MAX_MEMORY=512mb

# ============================================
# Database (Optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/tourismiq
# Or use Supabase:
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# External APIs (Optional)
# ============================================
# DATAtourisme API
DATATOURISME_API_KEY=your_datatourisme_api_key

# INSEE MELODI API
INSEE_API_KEY=your_insee_api_key

# Opendatasoft
OPENDATASOFT_API_KEY=your_opendatasoft_api_key

# Weather APIs (if needed)
OPENWEATHER_API_KEY=your_openweather_api_key

# ============================================
# ML Model Configuration
# ============================================
MODEL_PATH=ml/models/quality_scorer/scorer.pkl
ENABLE_MODEL_CACHE=true

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ============================================
# Monitoring (Optional)
# ============================================
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090

# ============================================
# Streamlit Dashboard
# ============================================
STREAMLIT_SERVER_PORT=8501
API_URL=http://localhost:8000